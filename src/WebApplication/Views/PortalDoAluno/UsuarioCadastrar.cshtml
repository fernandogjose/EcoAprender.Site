@model Domain.Entities.Usuario

@{
    ViewBag.Title = "Portal do Aluno da Escola de Educação Infantil e Berçário Eco Aprender";
    ViewBag.MetaDescription = "No portal do aluno da Escola Eco Aprender, os pais e alunos da escola tem acesso ao conteúdo programático, comunicados e ao cardápio.";
}

<input type="text" id="isAdmin" value="true" class="hide" />

<div class="home-frase alpha60 titulo-desktop">
    <h2 class="texto-branco">USUÁRIOS DA ESCOLA DE EDUCAÇÃO INFANTIL E BERÇÁRIO <strong>ECO APRENDER</strong></h2>
</div>
<img src="/img/portal-do-aluno/portal-do-aluno-header.jpg" class="img-responsive img-principal" title="Portal do Aluno da Escola de Educação Infantil e Berçário Eco Aprender" alt="Portal do Aluno da Escola de Educação Infantil e Berçário Eco Aprender" />

<div class="div-veja-mais MarginTop30">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li><a href="/" title="Escola de Educação Infantil e Berçário Eco Aprender">Escola de Educação Infantil e Berçário Eco Aprender</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Painel" title="Portal do Aluno">Portal do Aluno</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Usuario" title="Usuários">Usuários</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container pagina-interna">

    <div class="row">

        <div class="col-xs-12">
            <h2>Cadastro de <strong>Usuário</strong></h2>

            <form class="form-horizontal" id="form" name="form" method="post" action="@Url.Action("Usuario-Salvar", "Portal-Do-Aluno")">
                <div class="form-group">
                    <label for="Nome" class="col-xs-2 control-label">Nome</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.Id, new { @class = "hide" })
                        @Html.TextBoxFor(x => x.UsuarioNome, new { @class = "hide" })
                        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-2 control-label">Nome no Boleto</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.NomeNoBoleto, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Login" class="col-xs-2 control-label">Login</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Senha" class="col-xs-2 control-label">Senha</label>
                    <div class="col-xs-5">
                        @Html.PasswordFor(x => x.Senha, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Email" class="col-xs-2 control-label">Email</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Telefone" class="col-xs-2 control-label">Telefone</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.TelefoneResidencial, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Celular" class="col-xs-2 control-label">Celular</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.TelefoneCelular, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="Aniversário" class="col-xs-2 control-label">Aniversário</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.DataDeAniversario, new { @class = "form-control", @type = "datetime" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-2 control-label">CPF</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.Cpf, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-2 control-label">Endereço</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.Endereco, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-2 control-label">Bairro</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-2 control-label">Cep</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(x => x.Cep, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-offset-2 col-xs-10">
                        <button type="submit" class="btn btn-primary btn-salvar" id="salvar">Salvar</button>
                        <a href="/Portal-Do-Aluno/Usuario" type="button" class="btn btn-warning">Voltar</a>
                    </div>
                </div>

                <p class="col-xs-offset-2 col-xs-10 alerta alerta-login hide" id="mensagemDeErro">

                </p>
            </form>
        </div>

    </div>
</div>

<div class="div-veja-mais MarginTop30">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li><a href="/" title="Escola de Educação Infantil e Berçário Eco Aprender">Escola de Educação Infantil e Berçário Eco Aprender</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Painel" title="Portal do Aluno">Portal do Aluno</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Usuario" title="Usuários">Usuários</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="actionPainel" value="@Url.Action("Painel", "PortalDoAluno")" />

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.14.0/jquery.validate.min.js"></script>
    @Scripts.Render("~/bundles/usuarioCadastrar")
}