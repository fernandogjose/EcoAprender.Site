@model IList<Domain.Entities.Video>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Portal do Aluno da Escola de Educação Infantil e Berçário Eco Aprender";
    ViewBag.MetaDescription = "No portal do aluno da Escola Eco Aprender, os pais e alunos da escola tem acesso ao conteúdo programático, videoss e ao cardápio.";
}

<input type="text" id="isAdmin" value="true" class="hide" />

<div class="home-frase alpha60 titulo-desktop">
    <h2 class="texto-branco">VIDEOS</h2>
</div>
<img src="/img/portal-do-aluno/portal-do-aluno-header.jpg" class="img-responsive img-principal" title="Portal do Aluno da Escola de Educação Infantil e Berçário Eco Aprender" alt="Portal do Aluno da Escola de Educação Infantil e Berçário Eco Aprender" />

<div class="div-veja-mais MarginTop30">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li><a href="/" title="Escola de Educação Infantil e Berçário Eco Aprender">Escola de Educação Infantil e Berçário Eco Aprender</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Painel" title="Portal do Aluno">Portal do Aluno</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Admin/video" title="Videos">Videos</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container pagina-interna">

    <div class="row" id="lista-videos">

        <div class="col-xs-12">

            <table class="table table-hover table-data" id="videos">
                <thead>
                    <tr>
                        <th colspan="3">Lista de <strong>Videos</strong></th>
                    </tr>
                    <tr>
                        <th>Data</th>
                        <th>Titulo</th>
                        <th></th>
                        <th><a href="/Portal-Do-Aluno/admin/video/0" class="btn btn-primary novo">Novo</a></th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        if (Model != null)
                        {
                            foreach (var video in Model)
                            {
                                <tr>
                                    <td>@video.Data.ToString("dd/MM/yyyy")</td>
                                    <td>@video.Titulo</td>
                                    <td>
                                        <a href="/portal-do-aluno/admin/video/@video.Id" class="btn btn-success editar">Editar</a>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger excluir" onclick="adminVideo.Excluir(@video.Id)">Excluir</button>
                                    </td>
                                </tr>
                            }
                        }
                    }

                </tbody>
            </table>

        </div>

    </div>
</div>

<div class="div-veja-mais MarginTop30">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li><a href="/" title="Escola de Educação Infantil e Berçário Eco Aprender">Escola de Educação Infantil e Berçário Eco Aprender</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Painel" title="Portal do Aluno">Portal do Aluno</a><i class="fa fa-angle-right"></i></li>
                    <li><a href="/Portal-Do-Aluno/Admin/Video" title="Videos">Videos</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="actionPainel" value="@Url.Action("Painel", "PortalDoAluno")" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
    @Scripts.Render("~/bundles/bootbox")
    @Scripts.Render("~/bundles/adminVideo")
}